
<Users>:
    orientation: 'vertical'
    padding: dp(12)
    BoxLayout:
        size_hint_y: None
        height: dp(54)
        BoxLayout:
        BackBox:
            radius: [self.height*.45]
            padding: [dp(12), 0]
            size_hint_x: .125
            bcolor: app.color_primary
            RelativeLayout:
                AnchorLayout:
                    anchor_x: "right"
                    Text:
                        text: icon("icon-plus")
                        halign: "right"
                        color: [1, 1, 1, 1]
                        font_size: app.fonts.size.h3
                        size_hint_x: None
                        width: self.height
                AnchorLayout:
                    anchor_x: "left"
                    RoundedButton:
                        text: "Adicionar"
                        halign: "left"
                        bcolor: app.color_primary
                        radius: [self.height*.3]
                        color: [1, 1, 1, 1]
                        font_size: self.width*.225 # este comando alinha o texto o espaço da caixa, independente da dimensão da tela
                        size_hint_x: .8
                        on_release: root.add_new()
    BoxLayout:
        id: bx_table
        orientation: "vertical"
        padding: [0, dp(16), 0, 0]
        BackBox:
            size_hint_y: None
            height: dp(42)
            bcolor: app.color_secondary_bg
            spacing: dp(12)
            padding: [dp(12), 0]
            Text:
                text: "Nome"
                color: app.color_primary_text
                font_size: self.width*.1
                size_hint_x: .15
            Text:
                text: "Sobrenome"
                color: app.color_primary_text
                font_size: self.width*.1
                size_hint_x: .15
            Text:
                text: "Username"
                color: app.color_primary_text
                font_size: self.width*.1
                size_hint_x: .15
            Text:
                text: "Senha[size=12](criptografada)[/size]"
                color: app.color_primary_text
                font_size: self.width*.06
                size_hint_x: .25
            Text:
                text: "Data de Criação"
                color: app.color_primary_text
                font_size: self.width*.1
                size_hint_x: .15
            Text:
                text: "Cargo"
                color: app.color_primary_text
                font_size: self.width*.1
                size_hint_x: .15
            BoxLayout:
                size_hint_x: None
                width: self.height
        BoxLayout:
            ScrollView:
                do_scroll: [False, True]
                size_hint_y: None
                height: self.parent.height
                GridLayout:
                    id: gl_users
                    cols: 1
                    spacing: dp(8)
                    size_hint_y: None
                    height: self.minimum_height

<UserTile>
    size_hint_y: None
    height: dp(42)
    spacing: dp(12)
    padding: [dp(12), 0]
    canvas.before:
        Color:
            rgba: app.color_secondary_bg
        Rectangle:
            pos: self.pos
            size: [self.size[0], dp(1)]
    Text:
        text: root.first_name
        color: app.color_primary_text
        font_size: self.width*.1
        font_name: app.fonts.body
        size_hint_x: .15
    Text:
        text: root.last_name
        color: app.color_primary_text
        font_size: self.width*.1
        font_name: app.fonts.body
        size_hint_x: .15
    Text:
        text: root.username
        color: app.color_primary_text
        font_size: self.width*.1
        font_name: app.fonts.body
        size_hint_x: .15
    Text:
        text: root.password
        color: app.color_primary_text
        font_size: self.width*.06
        font_name: app.fonts.body
        size_hint_x: .25
    Text:
        text: root.created
        color: app.color_primary_text
        font_size: self.width*.1
        font_name: app.fonts.body
        size_hint_x: .15
    Text:
        text: root.user_role
        color: app.color_primary_text
        font_size: self.width*.1
        font_name: app.fonts.body
        size_hint_x: .15
    FlatButton:
        text: icon("icon-trash")
        size_hint_x: None
        width: self.height
        color: app.color_tertiary
        on_release: root.delete_user()

<ModUSer>:
    background: ""
    background_color: [0, 0, 0, .1]
    AnchorLayout:
        anchor_x: "right"
        BackBox:
            orientation: 'vertical'
            spacing: dp(12)
            bcolor: app.color_primary_bg
            size_hint_x: .3
            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None
                height: dp(42)
                FlatButton:
                    text: icon("icon-x")
                    color: app.color_primary_text
                    font_size: app.fonts.size.h1
                    size_hint_x: None
                    width: self.height
                    on_release: 
                        root.dismiss()
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(8)
                size_hint_y: .2
                Text:
                    id: title
                    text: 'Novo Usuário'
                    font_name: app.fonts.styled
                    font_size: app.fonts.size.extra
                    color: app.color_primary_text
                    halign: 'center'
                    valign: 'bottom'
                AnchorLayout:
                    anchor_y: 'top'
                    Label:
                        id: subtitle
                        text: 'Registre suas informações de usuário'
                        text_size: [self.parent.width, None]
                        font_name: app.fonts.body
                        font_size: app.fonts.size.h3
                        size: self.texture_size
                        color: app.color_secondary_text
                        halign: 'center'
                        valign: 'top'
                        size_hint_y: None
            AnchorLayout:
                size_hint_y: .8
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(12)
                    padding: dp(8)
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: fname
                            hint_text: "nome"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h2
                            multiline: False
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: lname
                            hint_text: "sobrenome"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h2
                            multiline: False
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: uname
                            hint_text: "usuário"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h2
                            multiline: False
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: pwd
                            hint_text: "senha"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h2
                            password: True
                            multiline: False
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        FlatField:
                            id: cpwd
                            hint_text: "repita a senha"
                            hint_text_color: app.color_primary_text
                            font_size: app.fonts.size.h2
                            password: True
                            multiline: False
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        bcolor: app.color_secondary_bg
                        radius: [self.height*.1]
                        padding: [dp(12), dp(2)]
                        Spinner:
                            id: role
                            text: "selecione o cargo"
                            values: root.spinner_values
                            font_size: app.fonts.size.h2
                            radius: [self.height*.1]
                            size_hint_y: None
                            height: dp(64)
                    Widget:
                    BackBox:
                        size_hint_y: None
                        height: dp(64)
                        RoundedButton:
                            id: btn_confirm
                            text: "Adicionar"
                            font_name: app.fonts.heading
                            font_size: app.fonts.size.h1
                            bcolor: app.color_primary
                            radius: [self.height*.1]
                            on_release:
                                root.callback(root)
                                root.dismiss()